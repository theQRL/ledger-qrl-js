  },
  "homepage": "https://github.com/theQRL/ledger-qrl-js",
  "dependencies": {
    "chai": "^4.2.0",
    "mocha": "^9.1.2",
    "node-hid": "^0.7.4",
    "q": "^1.5.1",
    "requirejs": "^2.3.6"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "uglify-js": "^3.4.9"
  },
  "scripts": {
    "test": "mocha tests/tests-node_basic.js",
    "browserify-wallet": "browserify --im --standalone QrlLedger -o wallet/qrl-ledger-library.js wallet/qrl-ledger-library-src.js",
